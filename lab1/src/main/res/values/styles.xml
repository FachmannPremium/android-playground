<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="GoodInput">
        <item name="android:editTextColor">@color/colorGoodInput</item>
        <item name="android:textColorHint">@color/colorGoodInput</item>
        <item name="android:textColor">@color/colorGoodInput</item>
    </style>

    <style name="WrongInput">
        <item name="android:editTextColor">@color/colorWrongInput</item>
        <item name="android:textColorHint">@color/colorWrongInput</item>
        <item name="android:textColor">@color/colorWrongInput</item>
    </style>

</resources>
